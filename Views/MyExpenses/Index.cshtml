@model IEnumerable<WebApplication1.Models.Expenses>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Expenses</h2>
        </div>
        <div class="col-6 text-right">
             <a class="btn btn-primary" asp-controller="MyExpenses" asp-action="Create">Add new Expense</a> 
            </div>
    </div>
    <br/>

    @if (Model.Count() > 0)
    {
            <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Expense
                </th>
                <th>
                    Amount
                </th>
                <th>
                    Changes
                </th>
               
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="35%">@item.ExpenseName</td>
                        <td width="35%">@item.Amount $</td>
                        <td width="30%">
                            <div class="w-100 btn-group"role="group">
                                    <a class="btn btn-primary mx-1" asp-controller="MyExpenses" asp-route-Id="@item.Id" asp-action="Update" >Edit</a>
                                    <a class="btn btn-danger mx-1" asp-controller="MyExpenses" asp-route-Id="@item.Id"  asp-action="Delete" >Delete</a> 
                            </div>
                        </td>
                        
                    </tr>
                }
        </tbody>

    </table>
    }
    else
    {
            <p>No items created yet</p>
    }

</div>